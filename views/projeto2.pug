    script(src="/components/user-settings/settings.js")
  
  body
    .glass-background

    header.glass-navbar
      .container
        a.glass-logo(href="/")
          span Projetos IOT
        .header-center
          .title-container
            h2.page-title Monitoramento Clim√°tico
            p.page-subtitle Dados ambientais e geolocaliza√ß√£o em tempo real
        nav.nav-right
          if user
            button.profile-button(type="button")
              img.profile-photo(src=user.avatarUrl || '/img/default-avatar.png' alt=user.username)
              span.username #{user.username}

    .projeto2-container
      .container
        if error
          .glass-alert.alert-error= error
        if success
          .glass-alert.alert-success= success

        // M√©tricas no topo lado a lado
        .metrics-grid
          .glass-card.metric-card
            .metric-header
              span.metric-icon üå°Ô∏è
              span.metric-label Temperatura
            .metric-value#card-temp #{tempValue !== null ? tempValue + '¬∞C' : '--¬∞C'}
          .glass-card.metric-card
            .metric-header
              span.metric-icon üí®
              span.metric-label Vento
            .metric-value#card-vento #{ventoValue !== null ? ventoValue + ' m/s' : '-- m/s'}
          .glass-card.metric-card
            .metric-header
              span.metric-icon üíß
              span.metric-label Umidade
            .metric-value#card-umidade #{umidadeValue !== null ? umidadeValue + '%' : '--%'}
          .glass-card.metric-card
            .metric-header
              span.metric-icon ‚òîÔ∏è
              span.metric-label Irriga√ß√£o
            .metric-toggle-container
              .toggle-container
                span.toggle-label OFF
                label.toggle-switch
                  input(type="checkbox" id="teste")
                  span.slider
                span.toggle-label ON
              .toggle-status#toggleStatus.off Desativado

        // Mapa e Gr√°fico lado a lado
        .map-chart-grid
          .glass-card.map-card
            .card-header
              h3.card-title
                span.icon üó∫Ô∏è
                span Localiza√ß√£o
            .card-content
              #map
              #clima-info.climate-info
                span Aguardando dados clim√°ticos...

          .glass-card.chart-card
            .card-header
              h3.card-title
                span.icon üìä
                span Gr√°fico Ambiental
              .chart-controls
                select#eixoY.glass-select
                  option(value="temperatura") Temperatura
                  option(value="umidade") Umidade
                  option(value="vento") Velocidade do Vento
                select#limiteAmostras.glass-select
                  option(value="10") √öltimas 10
                  option(value="25") √öltimas 25
                  option(value="50" selected) √öltimas 50
                  option(value="100") √öltimas 100
            .card-content.chart-content-full
              canvas#grafico

        // Dados recentes com tabs
        .glass-card.data-card
          .card-header
            h3.card-title
              span.icon üìã
              span Dados Recentes
          .card-content
            .data-tabs
              button.tab-button.active(data-tab="mapa") Localiza√ß√£o
              button.tab-button(data-tab="temperatura") Temperatura
              button.tab-button(data-tab="umidade") Umidade
              button.tab-button(data-tab="vento") Vento

            
            .tab-content#tab-mapa.active
              .data-list
                if registrosmapa && registrosmapa.length
                  each registro in registrosmapa
                    .data-item
                      .data-field
                        strong Lat: 
                        span #{registro.latitude}
                      .data-field
                        strong Long: 
                        span #{registro.longitude}
                else
                  .empty-state
                    p Nenhum dado de localiza√ß√£o dispon√≠vel

            .tab-content#tab-temp
              .data-list
                if registrostemp && registrostemp.length
                  each registro in registrostemp
                    .data-item
                      .data-field
                        strong Temperatura: 
                        span #{registro.valor}¬∞C
                else
                  .empty-state
                    p Nenhum dado de temperatura dispon√≠vel

            .tab-content#tab-umidade
              .data-list
                if registrosumidade && registrosumidade.length
                  each registro in registrosumidade
                    .data-item
                      .data-field
                        strong Umidade: 
                        span #{registro.valor}%
                else
                  .empty-state
                    p Nenhum dado de umidade dispon√≠vel

            .tab-content#tab-vento
              .data-list
                if registrosvento && registrosvento.length
                  each registro in registrosvento
                    .data-item
                      .data-field
                        strong Velocidade: 
                        span #{registro.valor} m/s
                else
                  .empty-state
                    p Nenhum dado de vento dispon√≠vel


        .actions-section
          a.glass-button.glass-button-secondary(href="/")
            span.icon üè†
            span Voltar √† p√°gina inicial

