      .card.shadow-lg(style="width: 300px;")
        .card-body
          h2.card-title.text-center Registrar
          form(action="/users/register" method="POST")
            .mb-3
              label.form-label(for="username") Useename
              input#username.form-control(type="text" name="username" placeholder="Digite seu usu√°rio" required)
            .mb-3
              label.form-label(for="password") Senha
              input#password.form-control(type="password" name="password" placeholder="Digite sua senha" required)
            button.btn.btn-primary.w-100(type="submit") Criat conta
          p.text-center.mt-3
            a(href="/login") Voltar ao login
